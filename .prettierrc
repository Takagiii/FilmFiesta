{
  "trailingComma": "es5",
  "tabWidth": 4,
  "semi": true,
  "singleQuote": true,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "printWidth": 100,
  "useTabs": false,
  "endOfLine": "auto",
  "overrides": [
    {
      "files": "*.ts",
      "options": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "bracketSpacing": true,
        "arrowParens": "avoid",
        "printWidth": 100,
        "useTabs": false,
        "endOfLine": "auto"
      }
    },
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false,
        "printWidth": 120,
        "endOfLine": "lf"
      }
    },
    {
      "files": "*.scss",
      "options": {
        "tabWidth": 4,
        "semi": true,
        "singleQuote": true,
        "printWidth": 120,
        "endOfLine": "lf"
      }
    }
  ]
}
